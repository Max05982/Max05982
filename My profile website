  <script>
    const config = {
      displayName: 'John Muster',
      bio: 'Designer â€¢ Developer â€¢ Coffee Enthusiast',
      avatar: 'https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRtkaoWGXNU79KN65imnCz_RxlvZStwwSH1oQ&s',
      links: [
        {label:'My Website', url:'https://example.com', desc:'Portfolio & Blog', icon:'ðŸŒ'},
        {label:'Projects', url:'https://github.com/', desc:'Open Source', icon:'ðŸ’»'},
        {label:'LinkedIn', url:'https://linkedin.com', desc:'Network', icon:'ðŸ”—'},
        {label:'Contact', url:'mailto:hello@example.com', desc:'Message me', icon:'âœ‰ï¸'}
      ]
    }

    const container = document.getElementById('linksContainer');
    const nameEl = document.getElementById('displayName');
    const bioEl = document.getElementById('bio');
    const avatarImg = document.getElementById('avatarImg');

    function render(){
      nameEl.textContent = config.displayName;
      bioEl.textContent = config.bio;
      avatarImg.src = config.avatar;

      container.innerHTML = '';
      config.links.forEach(ln => {
        const a = document.createElement('a');
        a.className = 'link';
        a.href = ln.url;
        a.target = '_blank';
        a.rel = 'noopener noreferrer';
        a.setAttribute('aria-label', ln.label + (ln.desc ? ' - ' + ln.desc : ''));
        a.innerHTML = `
          <div class="left">
            <div class="icon" aria-hidden="true">${escapeHtml(ln.icon || 'ðŸ”—')}</div>
            <div>
              <div class="label">${escapeHtml(ln.label)}</div>
              ${ln.desc ? `<div class="desc">${escapeHtml(ln.desc)}</div>` : ''}
            </div>
          </div>
          <div class="meta">â€º</div>
        `;
        container.appendChild(a);
      })
    }

    function escapeHtml(s){
      return String(s).replace(/[&<>"']/g, c => ({'&':'&amp;','<':'&lt;','>':'&gt;','"':'&quot;',"'":"&#39;"}[c]));
    }

    render();
  </script>
